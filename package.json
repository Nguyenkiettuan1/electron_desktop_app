{
  "name": "test-automation-screen-auto",
  "version": "1.0.0",
  "description": "Modern Desktop App for Test Automation Screen Auto",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build-win": "electron-builder --win",
    "build-win-portable": "electron-builder --win portable",
    "build-simple": "electron-builder --win portable --config.win.sign=false",
    "pack": "electron-packager . --platform=win32 --arch=x64 --out=dist --overwrite",
    "pack-portable": "electron-packager . --platform=win32 --arch=x64 --out=dist --overwrite --asar"
  },
  "keywords": [
    "test-automation",
    "screenshot",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.testautomation.screenauto",
    "productName": "Test Automation Screen Auto",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!screenshots/**/*",
      "!__pycache__/**/*",
      "!*.log",
      "!dist/**/*",
      "!.env",
      "!env.example"
    ],
    "win": {
      "target": "dir",
      "sign": false,
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Test Automation Screen Auto"
    }
  }
}